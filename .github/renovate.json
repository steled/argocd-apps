{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "main"
  ],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "enabledManagers": [
    "custom.regex",
    "github-actions"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)apps/values\\.yaml$"
      ],
      "matchStrings": [
        "\\s*# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (?:packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s+([A-Za-z0-9_]+?_)?(VERSION|version)\\s*(:|=)\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "helm",
      "fileMatch": [
        "(^|/)apps/values\\.yaml$"
      ],
      "matchStrings": [
        "\\s*# renovate: depName=(?<depName>[^\\s]+?)(?: (?:packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s+[A-Za-z0-9_]+?_(VERSION|version)\\s*:*\\??=\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "fileMatch": [
        "(^|/)apps/values\\.yaml$"
      ],
      "matchStrings": [
        "\\s*# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (?:packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s+([A-Za-z0-9_]+?_)?(VERSION|version)\\s*(:|=)\\s*[\"']?(?<currentValue>.+?)(@(?<currentDigest>sha256:[a-f0-9]+))?[\"']?\\s"
      ],
      "versioningTemplate": "docker"
    }
  ],
  "github-actions": {
    "fileMatch": [
      "(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$",
      "(^|/)action\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["custom.regex", "github-actions"],
      "separateMinorPatch": true
    },
    {
      "matchManagers": ["custom.regex", "github-actions"],
      "matchUpdateTypes": ["patch", "pinDigest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["atmoz/sftp"],
      "pinDigests": true
    },
    {
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["VictoriaMetrics/helm-charts"],
      "extractVersion": "^victoria-metrics-k8s-stack-(?<version>.*)$"
    },
    {
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["nextcloud/helm"],
      "extractVersion": "^nextcloud-(?<version>.*)$"
    },
    {
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["sj14/helm-charts"],
      "extractVersion": "^sftp-server-(?<version>.*)$"
    },
    {
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["pmoscode-helm/jdownloader2"],
      "extractVersion": "^jdownloader2-(?<version>.*)$"
    }
  ]
}
