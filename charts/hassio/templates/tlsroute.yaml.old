apiVersion: gateway.networking.k8s.io/v1alpha2
kind: TLSRoute
metadata:
  annotations:
    cert-manager.io/cluster-issuer: cloudflare-letsencrypt-{{ .Values.ingress.environment }}
  name: hassio
spec:
  hostnames:
  - {{ .Values.tlsroute.hostnames0 }}
  parentRefs:
  - name: shared-gateway
    namespace: kube-system
  rules:
  - backendRefs:
    - group: ''
      kind: Service
      name: hassio
      port: 443
      weight: 1
